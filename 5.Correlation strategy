## Correlation strategy
import pandas as pd
from tabulate import tabulate

units = {
    'field': '',
    'well_name': '',
    'date': '',
    'fluid_type': '',
    'gauge_depth': 'm',
    'gauge_tvd': 'm',
    'gauge_pressure': 'bara',
    'tubing_head_p': 'bara',
    'tubing_head_t': '°C',
    'gor': 'Sm3/Sm3',
    'cgr': 'Sm3/Sm3',
    'wgr': 'Sm3/Sm3',
    'gas_rate': '1000Sm3/day',
    'sgor': 'Sm3/Sm3',
    'water_cut': '%',
    'liquid_rate': 'Sm3/day',
    'reservoir_pressure': 'bara',
    'correlation': '',
    'pressure': 'bara',
    'temperature': '°C',
    'holdup': '',
    'dp_friction': 'bar',
    'dp_gravity': 'bar',
    'diameter': 'inches',
    'oil_density': 'kg/m3',
    'gas_density': 'kg/m3',
    'water_density': 'kg/m3',
    'liquid_density': 'kg/m3',
    'mixture_density': 'kg/m3',
    'oil_viscosity': 'cp',
    'wh_oil_viscosity': 'cp',
    'gas_viscosity': 'cp',
    'wh_gas_viscosity': 'cp',
    'relative_error': '%',
    'deviation': 'bara',
}

results_df = pd.DataFrame(columns=['Correlation', 'MAPE', 'WAPE', 'MAD', 'SD'])
raw_df.columns = [col.lower().strip().replace(' ', '_') for col in raw_df.columns]
parameters_for_display = [f"{i+1}. {col.replace('_', ' ').title()} [{units.get(col, '')}]" for i, col in enumerate(raw_df.columns)]
filter_parameters = [col for col in raw_df.columns]
params_grid = [parameters_for_display[i:i + 3] for i in range(0, len(parameters_for_display), 3)]
params_grid = [row + [""] * (3 - len(row)) for row in params_grid]

print("Available parameters to filter by (with units):")
print(tabulate(params_grid, tablefmt='grid'))
string_parameters = {'fluid_type', 'field', 'well_name', 'date', 'correlation'}

num_filters = int(input("How many parameters do you want to filter by? ").strip())
modified_df = raw_df.copy()

for _ in range(num_filters):
    print("Choose a parameter to filter by (use the exact name):")

    parameter_to_filter = input().lower().strip().replace(' ', '_')

    if parameter_to_filter in string_parameters:
        value_to_filter = input(f"Enter the value for '{parameter_to_filter}': ").strip()
        if parameter_to_filter == 'date': 
            value_to_filter = pd.to_datetime(value_to_filter)
        modified_df = modified_df[modified_df[parameter_to_filter] == value_to_filter]
    else:
        value_to_filter = float(input(f"Enter the value for '{parameter_to_filter}': ").strip())
        accuracy_percentage = float(input("Enter the accuracy percentage (e.g., 10 for 10%): ").strip())
        accuracy_range = value_to_filter * (accuracy_percentage / 100)
        min_value = value_to_filter - accuracy_range
        max_value = value_to_filter + accuracy_range
        modified_df = modified_df[(modified_df[parameter_to_filter] >= min_value) & (modified_df[parameter_to_filter] <= max_value)]


correlation_list = modified_df['correlation'].unique()

for correlation in correlation_list:
    filtered_df = modified_df[modified_df['correlation'] == correlation]

    sum_abs_relative_error = filtered_df['relative_error'].abs().sum()
    count_rows = len(filtered_df)
    MAPE = (sum_abs_relative_error / count_rows) * 100 if count_rows else float('inf')

    sum_deviations = filtered_df['deviation'].abs().sum()
    sum_gp = filtered_df['gauge_pressure'].sum()
    WAPE = (sum_deviations / sum_gp) * 100 if sum_gp else float('inf')
    MAD = sum_deviations / count_rows if count_rows else float('inf')
    SD = filtered_df['deviation'].std()

    result = pd.DataFrame([[correlation, MAPE, WAPE, MAD, SD]], columns=['Correlation', 'MAPE', 'WAPE', 'MAD', 'SD'])
    results_df = pd.concat([results_df, result], ignore_index=True)

print(results_df)
## Correlations order
import matplotlib.pyplot as plt

bar_colors = ['#DCDCDC'] * len(results_df)
min_mape_correlation = results_df.loc[results_df['MAPE'].idxmin(), 'Correlation']
max_mape_correlation = results_df.loc[results_df['MAPE'].idxmax(), 'Correlation']
results_df.sort_values('MAPE', inplace=True)

min_mape_position = results_df[results_df['Correlation'] == min_mape_correlation].index[0]
max_mape_position = results_df[results_df['Correlation'] == max_mape_correlation].index[0]

for ix, correlation in enumerate(results_df['Correlation']):
    if correlation == min_mape_correlation:
        bar_colors[ix] = '#4682B4'  
    if correlation == max_mape_correlation:
        bar_colors[ix] = '#B22222'  

plt.figure(figsize=(10, 8))

bars = plt.bar(results_df['Correlation'], results_df['MAPE'], color=bar_colors)
plt.errorbar(results_df['Correlation'], results_df['MAPE'], yerr=results_df['SD'] * 0.03, fmt='none', capsize=5, color='black')
plt.xticks(rotation=90, ha="right")

for label in plt.gca().get_xticklabels():
    if label.get_text() == min_mape_correlation:
        label.set_fontweight('bold')

plt.title('Overall performance')
plt.xlabel('Correlation')
plt.ylabel('MAPE (%)')

total_test_points = len(results_df)


plt.tight_layout()
plt.show()
